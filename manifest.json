{
	"manifest_version": 3,
	"name": "Summon",
	"version": "1.0.0",
	"description": "Automate your browser with AI",
	"permissions": ["activeTab", "scripting", "storage", "tabs"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "summon.png"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
